<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentUpdateProfile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".UpdateUserActivity">

        <TextView
            android:id="@+id/editProfileHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppins"
            android:text="@string/editProfileTitle"
            android:textColor="@color/orange"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/updateProfileSaveBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_done_24"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/editProfileHeading"
            android:layout_marginEnd="6dp"/>

        <EditText
            android:id="@+id/updateProfileEnterUsername"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/editProfileHeading"
            android:layout_marginTop="50dp"
            android:background="@drawable/orange_border"
            android:hint="Enter Username"
            android:fontFamily="@font/poppins"
            android:maxLines="1"
            android:padding="12dp"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/updateProfileEnterEmail"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/editProfileHeading"
            android:layout_marginTop="140dp"
            android:background="@drawable/orange_border"
            android:hint="Enter Email Address"
            android:inputType="textEmailAddress"
            android:fontFamily="@font/poppins"
            android:maxLines="1"
            android:padding="12dp"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/updateProfileEnterPassword"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/editProfileHeading"
            android:layout_marginTop="230dp"
            android:background="@drawable/orange_border"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:fontFamily="@font/poppins"
            android:maxLines="1"
            android:padding="12dp"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/updateProfileConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/editProfileHeading"
            android:layout_centerInParent="true"
            android:layout_marginTop="320dp"
            android:background="@drawable/orange_border"
            android:fontFamily="@font/poppins"
            android:hint="Re-Enter Password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:padding="12dp"
            android:textSize="20sp" />

    </RelativeLayout>

</FrameLayout>